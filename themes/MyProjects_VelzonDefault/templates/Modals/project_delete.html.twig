<div id="delete-project-modal" class="modal" tabindex="-1" role="dialog" aria-hidden="true">
	<div class="modal-dialog" role="document">
    	<div class="modal-content">
      		<div class="modal-header">
        		<h5 class="modal-title">Delete Project</h5>
        		<button type="button" class="close" data-dismiss="modal" aria-label="Close">
          			<span aria-hidden="true">&times;</span>
        		</button>
      		</div>
      		<div class="modal-body">
      			<div id="errorMessage" class="card alert alert-danger shadow mb-2" style="display:none;">
            		<div class="card-body"></div>
        		</div>
        		<p>
					{{ form( deleteProjectForm, {'attr': {'id': 'formDeleteProject'}} ) }}
				</p>
      		</div>
      		<div class="modal-footer">
        		<button id="btnDeleteProject" type="button" class="btn btn-primary">Delete</button>
        		<button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
      		</div>
    	</div>
  	</div>
</div>
