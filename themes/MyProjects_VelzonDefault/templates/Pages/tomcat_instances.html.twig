{% extends 'base.html.twig' %}

{% block content %}
    <!-- Begin Page Content -->
    <div class="container-fluid">
        <!-- Page Heading -->
        <div class="d-sm-flex align-items-center justify-content-between mb-4">
            <header class="panel-heading"><h3><strong>Tomcat Instances</strong></h3></header>
        </div>

        <div class="btn-group mb-3 ml-2" role="group" aria-label="Basic example">
            <button type="button" class="btn btn-primary btnInstallPhpVersion">Install Tomcat Instance</button>
        </div>
        
        <div class="row">
            <div class="col-lg-12">
                <div class="card shadow mb-4">
                    <!-- Card Header - Dropdown -->
                    <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                        <h6 class="m-0 font-weight-bold text-primary">Installed Instances</h6>
                        <div class="dropdown no-arrow">
                            <a class="dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <i class="fas fa-ellipsis-v fa-sm fa-fw text-gray-400"></i>
                            </a>
                            <div class="dropdown-menu dropdown-menu-right shadow animated--fade-in" aria-labelledby="dropdownMenuLink">
                                <div class="dropdown-header">Dropdown Header:</div>
                                <a class="dropdown-item btnInstallPhpVersion" href="javascript:void(0);">Install Tomcat Instances</a>
                            </div>
                        </div>
                    </div>
                    <!-- Card Body -->
                    <div class="card-body">
                        <table class="table table-striped table-advance table-hover">
                            <thead>
                                <tr>
                                    <th style="font-weight: bold;">Version</th>
                                    <th style="text-align:center; font-weight: bold;">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for v, info in versions_installed %}
                                    <tr>
                                        <td>{{ v }}</td>
                                        <td width="100">
                                            <a href="http://{{ current_host }}:{{ instances_configs[v]['httpConnectorPort'] }}" target="__blank" class="btn btn-success btn-circle btn-sm btnOpen" title="Open">
                                                <i class="fas fa-home"></i>
                                            </a>
                                        </td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
              </div>  
            </div>
        </div>
    </div>
    <!-- /.container-fluid -->
{% endblock %}

