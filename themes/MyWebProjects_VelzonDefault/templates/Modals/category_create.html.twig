<div id="create-category-modal" class="modal" tabindex="-1" role="dialog" aria-hidden="true">
	<div class="modal-dialog" role="document">
    	<div class="modal-content">
      		<div class="modal-header">
        		<h5 class="modal-title">Create Category</h5>
        		<button type="button" class="close" data-dismiss="modal" aria-label="Close">
          			<span aria-hidden="true">&times;</span>
        		</button>
      		</div>
      		<div class="modal-body">
      			<div id="errorMessage" class="card alert alert-danger shadow mb-2" style="display:none;">
            		<div class="card-body"></div>
        		</div>
        		<div id="formCategoryContainer"></div>
      		</div>
      		<div class="modal-footer">
        		<button id="btnSaveCategory" type="button" class="btn btn-primary">Save changes</button>
        		<button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      		</div>
    	</div>
  	</div>
</div>
