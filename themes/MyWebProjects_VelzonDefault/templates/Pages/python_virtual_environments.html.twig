{% extends 'base.html.twig' %}

{# Override Blocs #}
{% block title %}{{ parent() }} :: Python Virtual Environments{% endblock %}
{% block pageTitle %}
    <h4 class="pageheader-title">
        <i class="fab fa-python"></i> 
        Python Virtual Environments
    </h4>
{% endblock %}

{% block content %}
    <!-- Begin Page Content -->
    <div class="container-fluid">
        <!-- Page Heading -->
        <div class="btn-group mb-3 ml-2" role="group" aria-label="Basic example">
            <button type="button" class="btn btn-primary btnInstallPhpVersion">Create Virtual Environment</button>
        </div>
        
        <div class="row">
            <div class="col-lg-12">
                <div class="card shadow mb-4">
                    <!-- Card Header - Dropdown -->
                    <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                        <h4 class="m-0 font-weight-bold">Installed Virtual Environments</h4>
                    </div>
                    <!-- Card Body -->
                    <div class="card-body">
                        <table class="table table-striped table-advance table-hover">
                            <thead>
                                <tr>
                                    <th style="font-weight: bold;">Virtual Environment</th>
                                    <th style="font-weight: bold;">Python Version</th>
                                    <th style="text-align:center; font-weight: bold;">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for v, info in virtual_environments %}
                                    <tr>
                                        <td>{{ v }}</td>
                                        <td></td>
                                        <td width="370">

                                        </td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
              </div>  
            </div>
        </div>
    </div>
    <!-- /.container-fluid -->
{% endblock %}

