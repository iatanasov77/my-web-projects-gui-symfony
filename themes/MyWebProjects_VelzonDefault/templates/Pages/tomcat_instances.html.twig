{% extends 'base.html.twig' %}

{# Override Blocs #}
{% block title %}{{ parent() }} :: Tomcat Instances{% endblock %}
{% block pageTitle %}
    <h4 class="pageheader-title">
        <i class="fab fa-java"></i> 
        Tomcat Instances
    </h4>
{% endblock %}

{% block content %}
    <!-- Begin Page Content -->
    <div class="container-fluid">
        <!-- Page Heading -->
        <div class="btn-group mb-3 ml-2" role="group" aria-label="Basic example">
            <button type="button" class="btn btn-primary btnInstallPhpVersion">Install Tomcat Instance</button>
        </div>
        
        <div class="row">
            <div class="col-lg-12">
                <div class="card shadow mb-4">
                    <!-- Card Header - Dropdown -->
                    <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                        <h4 class="m-0 font-weight-bold">Installed Instances</h4>
                    </div>
                    <!-- Card Body -->
                    <div class="card-body">
                        <table class="table table-striped table-advance table-hover">
                            <thead>
                                <tr>
                                    <th style="font-weight: bold;">Version</th>
                                    <th style="text-align:center; font-weight: bold;">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for v, info in versions_installed %}
                                    <tr>
                                        <td>{{ v }}</td>
                                        <td width="100">
                                            <a href="http://{{ current_host }}:{{ instances_configs[v]['httpConnectorPort'] }}" target="__blank" class="btn btn-success btn-circle btn-sm btnOpen" title="Open">
                                                <i class="fas fa-home"></i>
                                            </a>
                                        </td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
              </div>  
            </div>
        </div>
    </div>
    <!-- /.container-fluid -->
{% endblock %}

