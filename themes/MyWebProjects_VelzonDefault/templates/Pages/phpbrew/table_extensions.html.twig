<table class="table table-striped table-advance table-hover">
    <thead>
        <tr>
            <th style="font-weight: bold;">Extension</th>
            <th style="text-align:center; font-weight: bold;">Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for extName, ext in extensions %}
        <tr>
            <td>{{ extName }}</td>
            <td width="370" style="text-align: center;">
            	<a href="javascript:void(0);" class="btn btn-info btn-circle btn-sm btnEdit" title="Edit" data-extension="{{ ext }}" data-toggle="modal" data-target="#phpbrew-extension-edit-modal">
                    <i class="fas fa-edit"></i>
                </a>
                {#
                <a href="javascript:void(0);" class="btn btn-danger btn-circle btn-sm btnDelete" title="Delete" data-projectId="{{ project.id }}" data-toggle="modal" data-target="#delete-project-modal">
                    <i class="fas fa-trash"></i>
                </a>
                #}
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>
