
<table class="table table-striped table-advance table-hover">
	<thead>
		<tr>
			<th style="font-weight: bold;">Name</th>
			<th style="font-weight: bold;">Project Directory</th>
			<th style="text-align:center; font-weight: bold;">Actions</th>
		</tr>
	</thead>
	<tbody>
		{% for project in projects %}
			<tr>
				<td>{{ project.name }}</td>
				<td>{{ project.projectRoot }}</td>
				<td width="170">
					{%  if vs_project_installed( project ) %}
						<a href="{{ project.projectUrl }}" target="__blank" class="btn btn-success btn-circle btn-sm btnOpen" title="Open">
	                    	<i class="fas fa-home"></i>
	               		</a>
					{% else %}
						{% if project.sourceType %}
							<a class="btn btn-info btn-circle btn-sm btnInstall" data-projectId="{{ project.id }}" data-projectName="{{ project.name }}" href="javascript:void(0);" title="Install" >
		                    	<i class="fas fa-download"></i>
		                	</a>
						{% endif %}
						
						{% if project.installManual %}
							<a class="btn btn-info btn-circle btn-sm btnInstallManual" data-projectId="{{ project.id }}" data-projectName="{{ project.name }}" href="javascript:void(0);" title="Install" >
								<i class="fas fa-info-circle"></i>
							</a>							
		                {% endif %}
					{% endif %}
					
					<a href="javascript:void(0);" class="btn btn-info btn-circle btn-sm btnEdit" title="Edit" data-projectId="{{ project.id }}" data-toggle="modal" data-target="#create-project-modal">
	                    <i class="fas fa-edit"></i>
	                </a>
	                <a href="javascript:void(0);" class="btn btn-danger btn-circle btn-sm btnDelete" title="Delete" data-projectId="{{ project.id }}" data-toggle="modal" data-target="#delete-project-modal">
	                    <i class="fas fa-trash"></i>
	                </a>
				</td>
			</tr>
		{% endfor %}
	</tbody>
</table>
