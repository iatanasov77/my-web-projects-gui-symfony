<div id="upload-file-modal" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true" style="display: none;">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">
                    {{ 'vankosoft_org.form.file_upload_modal_title' | trans( {},'VankoSoftOrg' ) }}
				</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"> </button>
            </div>
            <div class="modal-body">
            
                <div id="modalBodyDownloadFile" class="card alert mb-2">
                    <div class="card-body"></div>
                </div>
                
                <div id="FileUploadProgressbar" style="display: none;">
                    <div class="progressInfo"><span class="caption"></span></div>
                </div>
                <div id="OneUpFileUpload"
                    data-endpoint="{{ oneup_uploader_endpoint( 'gallery' ) }}"
                ></div>
                
            </div>
            
            <div class="modal-footer" id="imContainer">
                <button type="button" class="btn btn-primary" id="btnSaveUploadFile" data-directoryId="{{ item.id }}">
                    {{ 'vs_application.form.save' | trans( {},'VSApplicationBundle' ) }}
				</button>
                <button type="button" class="btn btn-light" data-bs-dismiss="modal">
					{{ 'vs_application.form.cancel' | trans( {},'VSApplicationBundle' ) }}
				</button>
            </div>
        </div>
    </div>
</div>
