{% import "@VSApplication/Macros/form.html.twig" as vs_form %}

<div id="FormContainer" data-itemId="{{ item.id }}">
    
    {% if useFormMethod is not defined %}
        {% set useFormMethod = item.id ? 'PUT' : 'POST' %}
    {% endif %}
    {% if useFormMethod is defined %}{% set formMethod = useFormMethod %}{% else %}{% set formMethod = 'PUT' %}{% endif %}
    
    {{ form_start(form, { 'attr': {
        'class': 'form-horizontal',
    }, 'method': formMethod }) }}
    
        <div class="form-group">
            {{ form_label(form.hostComputerName, null, {
                'label_attr': {'class': 'form-label'}
                }) 
            }}
            
            {{ form_widget(form.hostComputerName, {'attr': {'class': 'form-control'}}) }}
        </div>
        
        <div class="form-group">
            {{ form_label(form.machineName, null, {
                'label_attr': {'class': 'form-label'}
                }) 
            }}
            {{ form_widget(form.machineName, {'attr': {'class': 'form-control'}}) }}
        </div>
        
        <div class="form-group">
            {{ form_label(form.privateIp, null, {
                'label_attr': {'class': 'form-label'}
                }) 
            }}
            {{ form_widget(form.privateIp, {'attr': {'class': 'form-control'}}) }}
        </div>
        
        <div class="form-group">
            {{ form_label(form.publicIp, null, {
                'label_attr': {'class': 'form-label'}
                }) 
            }}
            {{ form_widget(form.publicIp, {'attr': {'class': 'form-control'}}) }}
        </div>
        
        <div class="form-group">
            {{ form_label(form.machineBaseBox, null, {
                'label_attr': {'class': 'form-label'}
                }) 
            }}
            {{ form_widget(form.machineBaseBox, {'attr': {'class': 'form-control'}}) }}
        </div>
        
        <div class="form-group">
            {{ form_label(form.machineMemory, null, {
                'label_attr': {'class': 'form-label'}
                }) 
            }}
            {{ form_widget(form.machineMemory, {'attr': {'class': 'form-control'}}) }}
        </div>
        
        <div class="form-group">
            {{ form_label(form.machineCpus, null, {
                'label_attr': {'class': 'form-label'}
                }) 
            }}
            {{ form_widget(form.machineCpus, {'attr': {'class': 'form-control'}}) }}
        </div>
        
        <div class="form-group">
            {{ form_label(form.description, null, {
                'label_attr': {'class': 'form-label'}
                }) 
            }}
            {{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
        </div>
     
        {{ vs_form.buttons( form, metadata is defined ? metadata : null ) }}
    {{ form_end(form, {'render_rest': false}) }}
    
</div>