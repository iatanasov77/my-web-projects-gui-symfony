{% extends "@VSApplication/layout.html.twig" %}

{# Import Macros #}
{% import "@VSApplication/Macros/form.html.twig" as vs_form %}

{% if( item.id ) %}
    {% set pageTitle = ( 'vankosoft_org.template.page_title_project_payment_update' | trans( {},'VankoSoftOrg' ) ) %}
{% else %}
    {% set pageTitle = 'vankosoft_org.template.page_title_project_payment_create' | trans( {},'VankoSoftOrg' ) %}
{% endif %}

{% block title %}{{ parent() }} :: {{ pageTitle }}{% endblock %}
{% block pageTitle %}
	<h4 class="pageheader-title">
    	<i class="icon_genius"></i> 
        {{ pageTitle }}
   	</h4>
{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
            <div class="card">
            	<h5 class="card-header">{{ 'vankosoft_org.template.page_title_project_payment'  | trans( {},'VankoSoftOrg' ) }}</h5>
            	<div class="card-body">
            	
                    {% if formErrors is defined %}
                        {{ vs_form.errors( formErrors ) }}     
                    {% endif %}
                        
            		<div id="FormContainer" data-itemId="{{ item.id }}">
                        {% if useFormMethod is defined %}{% set formMethod = useFormMethod %}{% else %}{% set formMethod = 'PUT' %}{% endif %}
                        {{ form_start(form, { 'attr': {'class': 'form-horizontal', 'id': 'form-post'}, 'method': formMethod }) }}
                            
                            <div class="form-group">
                                {{ form_label(form.project, null, {
                                    'label_attr': {'class': 'form-label'}
                                    }) 
                                }}
                                
                                {{ form_widget(form.project, {'attr': {'class': 'form-select'}}) }}
                            </div>
                            
                            <div class="form-group">
                                {{ form_label(form.amount, null, {
                                    'label_attr': {'class': 'form-label'}
                                    }) 
                                }}
                                
                                {{ form_widget(form.amount, {'attr': {'class': 'form-control'}}) }}
                            </div>
                            
                            <div class="form-group">
                                {{ form_label(form.fromDate, null, {
                                    'label_attr': {'class': 'form-label'}
                                    }) 
                                }}
                                
                                {{ form_widget(form.fromDate, {'attr': {'class': 'form-control js-datepicker'}}) }}
                            </div>
                            
                            <div class="form-group">
                                {{ form_label(form.toDate, null, {
                                    'label_attr': {'class': 'form-label'}
                                    }) 
                                }}
                                {{ form_widget(form.toDate, {'attr': {'class': 'form-control js-datepicker'}}) }}
                            </div>
                            
                            <div class="form-group">
                                {{ form_label(form.description, null, {
                                    'label_attr': {'class': 'form-label'}
                                    }) 
                                }}
                                {{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
                            </div>
                            
                            {{ vs_form.buttons( form, metadata is defined ? metadata : null ) }}
                        {{ form_end(form, {'render_rest': false}) }}
                    </div>
            		
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block head_styles %} 
    {{ parent() }}
    {{ encore_entry_link_tags( 'js/project-payments-edit', null, 'VelzonTheme' ) }}
    
    {{ encore_entry_link_tags( 'ckeditor5', null, 'VelzonTheme' ) }}
{% endblock %}

{% block body_scripts %}
    {{ parent() }}
    {{ encore_entry_script_tags( 'js/project-payments-edit', null, 'VelzonTheme' ) }}
    
    {{ encore_entry_script_tags( 'ckeditor5', null, 'VelzonTheme' ) }}
{% endblock %}
