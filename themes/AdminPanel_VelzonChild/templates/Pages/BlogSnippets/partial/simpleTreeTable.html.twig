<table class="table table-striped table-advance table-hover" id="tblSnippets">
    <thead class="table-light">
        <tr>
            <th>{{ 'vs_application.template.items_index_row_title' | trans( {},'VSApplicationBundle' ) }}</th>
            <th>{{ 'vs_application.template.items_index_row_category' | trans( {},'VSApplicationBundle' ) }}</th>
            <th width="150">{{ 'vs_application.template.items_index_row_action' | trans( {},'VSApplicationBundle' ) }}</th>
        </tr>
    </thead>
    <tbody>
        {# {% for item in resources %} #}
        {% set rowClass = 'simpleTreeTable_Row_Odd' %}
        {% for item in categories %}
            {% if not item.parent %}
                {% set rowClass = loop.index0 is odd ? 'simpleTreeTable_Row_Odd' : 'simpleTreeTable_Row_Even' %}
                {% include 'Pages/BlogSnippets/partial/simpleTreeTableRows.html.twig' with {'category': item, 'parentId': 0, 'isSnippet': 0, 'rowClass': rowClass} %}
            {% endif %}
        {% endfor %}
        
        {% include 'Pages/BlogSnippets/partial/simpleTreeTableRowsUncategorized.html.twig' with {'rowClass': rowClass} %}
    </tbody>
</table>

