{% extends "@VSApplication/layout.html.twig" %}

{# Import Macros #}
{% import "@VSApplication/Macros/alerts.html.twig" as alerts %}
{% import "@VSApplication/Macros/translations.html.twig" as vs_translations %}
{% from "@VSApplication/Macros/pagination.html.twig" import pagination %}

{# Override Blocs #}
{% block title %}{{ parent() }} :: {{ 'vankosoft_org.template.page_title_blog_posts'  | trans( {},'VankoSoftOrg' ) }}{% endblock %}
{% block pageTitle %}
	<h4 class="pageheader-title">
    	<i class="fas fa-blog"></i> 
        {{ 'vankosoft_org.template.page_title_blog_posts'  | trans( {},'VankoSoftOrg' ) }}
   	</h4>
{% endblock %}

{% block content %}

    <div class="row">
    	<div class="col-xl-6 col-lg-12 col-md-12 col-sm-12 col-12" id="filterCategoryForm">
    		{{ form_label( filterForm.filterByCategory, null, {'label_attr': {'class': 'form-label'}}) }}
    	</div>
    </div>
    <div class="row">
        <div class="col-xl-6 mb-5" id="filterCategoryForm">
            {{ form_widget( filterForm.filterByCategory, {
                'attr': {
                    'class': 'form-select easyui-combotree'
                }
            }) }}
        </div>
        <div class="col-xl-6 mb-5">
            <a href="{{ path( 'vsorg_blogposts_index' ) }}" class="btn btn-primary">Clear Filter</a>
        </div>
    </div>
    
    <div class="row">
        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
            
            {% if resources|length > 0 %}
                <table class="table table-striped table-hover vsTableSortable">
                    <thead class="table-light">
                        <tr>
                            <th>N</th>
                            <th data-sortable="true" data-field="title">{{ 'vs_application.template.items_index_row_title' | trans( {},'VSApplicationBundle' ) }}</th>
                            <th>{{ 'vs_application.template.items_index_row_category' | trans( {},'VSApplicationBundle' ) }}</th>
                            <th>{{ 'vs_application.template.items_index_row_published' | trans( {},'VSApplicationBundle' ) }}</th>
                            <th>{{ 'vs_application.template.items_index_row_translations' | trans( {},'VSApplicationBundle' ) }}</th>
                            <th>{{ 'vs_application.template.items_index_row_log_versions' | trans( {},'VSApplicationBundle' ) }}</th>
                            <th data-sortable="true" data-field="createdAt">{{ 'vs_application.template.items_index_row_created' | trans( {},'VSApplicationBundle' ) }}</th>
                            <th data-sortable="true" data-field="updatedAt">{{ 'vs_application.template.items_index_row_updated' | trans( {},'VSApplicationBundle' ) }}</th>
                            <th width="150">{{ 'vs_application.template.items_index_row_action' | trans( {},'VSApplicationBundle' ) }}</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for item in resources %}
                            <tr>
                                <td>{{ loop.index }}</td>
                                <td>{{ item.title }}</td>
                                <td>{{ item.category.path | join( ' / ' ) }}</td>
                             	<td style="text-align: center;">
                                    {% if item.isPublished() %}
                                    	<i class="fas fa-check" style="color: #82c91e;">
                                   	{% else %}
                                    	<i class="fas fa-times" style="color: #ff1e1e;"></i>
                                    {% endif %}
                                </td>
                                <td>{% if translations[item.id] is defined %}{{ vs_translations.flags( translations[item.id] ) }}{% endif %}</td>
                                <td>{% if versions[item.id] is defined %}{{ vs_translations.versionFlags( versions[item.id] ) }}{% endif %}</td>
                                <td>{{ item.createdAt | date( 'd.m.Y H:i:s' ) }}</td>
                                <td>{{ item.updatedAt | date( 'd.m.Y H:i:s' ) }}</td>
                                <td>
                                	<div class="btn-group">
                                    	<a class="btn btn-primary"
                                    	   href="{{ path('vsorg_blogposts_update', {'id': item.id}) }}"
                                    	   title="{{ 'vs_application.template.items_index_row_action_edit' | trans( {},'VSApplicationBundle' ) }}"
                                        >
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a class="btn btn-danger btnDeleteResource"
                                        	href="{{ path('vsorg_blogposts_delete', {'id': item.id}) }}"
                                        	data-csrfToken="{{ csrf_token( item.id ) }}"
                                        	data-redirectUrl="{{ path( 'vsorg_blogposts_index' ) }}"
                                        	title="{{ 'vs_application.template.items_index_row_action_delete' | trans( {},'VSApplicationBundle' ) }}"
                                        >
                                            <i class="icon_close_alt2"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        {% else %}
                            {{ alerts.info( 'vs_application.template.there_are_no_items_to_display' | trans( {},'VSApplicationBundle' ) ) }}
                        {% endfor %}
                    </tbody>
                </table>
                
                {% if resources.haveToPaginate() %}
                    {{ pagerfanta( resources, null, { 'proximity': 10 } ) }}
                {% endif %}
            {% else %}
                {{ alerts.info( 'vs_application.template.there_are_no_items_to_display' | trans( {},'VSApplicationBundle' ) ) }}
            {% endif %}
            
        </div>
    </div>
    
    {% include '@VSApplication/Partial/resource-delete.html.twig' %}
{% endblock %}

{% block head_styles %} 
    {{ parent() }}
    {{ encore_entry_link_tags( 'js/posts-delete', null, 'VelzonTheme' ) }}
    {{ encore_entry_link_tags( 'js/posts', null, 'VelzonTheme' ) }}
{% endblock %}

{% block body_scripts %}
    {{ parent() }}
    {{ encore_entry_script_tags( 'js/posts-delete', null, 'VelzonTheme' ) }}
    {{ encore_entry_script_tags( 'js/posts', null, 'VelzonTheme' ) }}
{% endblock %}
