{% extends "@VSApplication/layout.html.twig" %}

{# Import Macros #}
{% import "@VSApplication/Macros/alerts.html.twig" as alerts %}
{% from "@VSApplication/Macros/pagination.html.twig" import pagination %}

{# Override Blocs #}
{% block title %}{{ parent() }} :: {{ 'vankosoft_org.template.list_projects' | trans( {},'VankoSoftOrg' ) }}{% endblock %}
{% block pageTitle %}
	<h4 class="pageheader-title">
    	<i class="fas fa-project-diagram"></i> 
        {{ 'vankosoft_org.template.list_projects' | trans( {},'VankoSoftOrg' ) }}
   	</h4>
{% endblock %}

{% block content %}
	<div class="row">
    	<div class="col-xl-6 col-lg-12 col-md-12 col-sm-12 col-12" id="filterCategoryForm">
    		{{ form_label( filterForm.filterByCategory, null, {'label_attr': {'class': 'form-label'}}) }}
    	</div>
    </div>
    <div class="row">
        <div class="col-xl-6 mb-5">
            {{ form_widget( filterForm.filterByCategory, {
                'attr': {
                    'class': 'form-select',
                    'data-value': filterCategory
                }
            }) }}
        </div>
        <div class="col-xl-6 mb-5">
            <a href="{{ path( 'vsorg_projects_index' ) }}" class="btn btn-primary">Clear Filter</a>
        </div>
    </div>
    
    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12 col-12 mb-2">
            <a class="btn btn-primary float-end"
                id="btnClearPageCache"
                href="javascript:void(0);" 
                title="{{ 'vankosoft_org.template.project_reload_pages' | trans( {},'VankoSoftOrg' ) }}"
                data-clearUrl="{{ path( 'vsorg_projects_clear_page_cache' ) }}"
            >
                {{ 'vankosoft_org.template.project_reload_pages' | trans( {},'VankoSoftOrg' ) }}
            </a>
        </div>
    </div>
    
    <div class="row">
        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
            
            {% if resources|length > 0 %}
                <table class="table table-striped table-advance table-hover vsTableSortable">
                    <thead class="table-light">
                        <tr>
                            <th></th>
                            <th data-sortable="true" data-field="title">{{ 'vs_application.template.items_index_row_title' | trans( {},'VSApplicationBundle' ) }}</th>
                            <th>{{ 'vs_application.template.items_index_row_category' | trans( {},'VSApplicationBundle' ) }}</th>
                            <th>{{ 'vankosoft_org.template.latest_version' | trans( {},'VankoSoftOrg' ) }}</th>
                            <th>{{ 'vs_application.template.items_index_row_published' | trans( {},'VSApplicationBundle' ) }}</th>
                            <th>{{ 'vs_application.template.items_index_row_translations' | trans( {},'VSApplicationBundle' ) }}</th>
                            <th width="150">{{ 'vs_application.template.items_index_row_action' | trans( {},'VSApplicationBundle' ) }}</th>
                        </tr>
                    </thead>
                    <tbody id="projectsContainer">
                        {% for item in resources %}
                            <tr id="{{ item.id }}" data-id="{{ item.id }}" data-position="{{ item.position }}">
                                <td><i class="fas fa-arrows-alt" title="Drag and Drop to Change Order" style="cursor: pointer;"></i></td>
                                <td>{{ item.title }}</td>
                                <td>{{ item.category.name }}</td>
                                <td>
                                    {% if item.id in latestVersions %}
                                        {{ latestVersions[item.id] }}
                                    {% endif %}
                                </td>
                                <td style="text-align: center;">
                                    {% if item.isPublished() %}
                                    	<i class="fas fa-check" style="color: #82c91e;">
                                   	{% else %}
                                    	<i class="fas fa-times" style="color: #ff1e1e;"></i>
                                    {% endif %}
                                </td>
                                <td>
                                    {% for locale in translations[item.id] %}
                                        <i class="flag flag-{{ locale | split( '_' )[1] | lower }}"></i>
                                        {% if not loop.last %}&nbsp;{% endif %}
                                    {% endfor %}
                                </td>
                                <td>
                                    <div class="btn-group">
                                        <a class="btn btn-outline-primary"
                                           href="{{ path('vsorg_git_issues_list', {'projectId': item.id}) }}"
                                           title="{{ 'vankosoft_org.template.project_reload_page' | trans( {},'VankoSoftOrg' ) }}"
                                        >
                                            <i class="fas fa-undo"></i>
                                        </a>
                                        
                                        <a class="btn btn-outline-primary"
                                           href="{{ path('vsorg_git_issues_list', {'projectId': item.id}) }}"
                                           title="{{ 'vankosoft_org.template.project_issues' | trans( {},'VankoSoftOrg' ) }}"
                                        >
                                            <i class="fas fa-bell"></i>
                                        </a>
                                        
                                        <a class="btn btn-outline-primary btnShowPayments"
                                           href="{{ path('vsorg_projects_payments', {'projectId': item.id}) }}"
                                           title="{{ 'vankosoft_org.template.project_payments_tooltip' | trans( {},'VankoSoftOrg' ) }}"
                                           data-projectName="{{ item.title }}"
                                           data-projectId="{{ item.id }}"
                                        >
                                            <i class="fas fa-dollar-sign"></i>
                                        </a>
                                        
                                    	<a class="btn btn-primary"
                                    	   href="{{ path('vsorg_projects_update', {'id': item.id}) }}"
                                    	   title="{{ 'vs_application.template.items_index_row_action_edit' | trans( {},'VSApplicationBundle' ) }}"
                                        >
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        
                                        <a class="btn btn-danger btnDeleteResource"
                                        	href="{{ path('vsorg_projects_delete', {'id': item.id}) }}"
                                        	data-csrfToken="{{ csrf_token( item.id ) }}"
                                        	data-redirectUrl="{{ path( 'vsorg_projects_index' ) }}"
                                        	title="{{ 'vs_application.template.items_index_row_action_delete' | trans( {},'VSApplicationBundle' ) }}"
                                        >
                                            <i class="icon_close_alt2"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
                
                {% if resources.haveToPaginate() %}
                    {{ pagerfanta( resources, null, { 'proximity': 10 } ) }}
                {% endif %}
            {% else %}
                {{ alerts.info( 'vs_application.template.there_are_no_items_to_display' | trans( {},'VSApplicationBundle' ) ) }}
            {% endif %}
            
        </div>
    </div>
    
    {% include '@VSApplication/Partial/resource-delete.html.twig' %}
{% endblock %}

{% block modals %}
    {{ parent() }}

    {% include 'Modals/project-payments.html.twig' %}
    {% include 'Modals/add-payment-for-project.html.twig' %}
{% endblock %}

{% block head_styles %}
    {{ parent() }}
    {{ encore_entry_link_tags( 'js/projects', null, 'VelzonTheme' ) }}
    
    {{ encore_entry_link_tags( 'ckeditor5', null, 'VelzonTheme' ) }}
{% endblock %}

{% block body_scripts %}
    {{ parent() }}
    
    {{ encore_entry_script_tags( 'js/projects', null, 'VelzonTheme' ) }}
    
    {{ encore_entry_script_tags( 'ckeditor5', null, 'VelzonTheme' ) }}
{% endblock %}
