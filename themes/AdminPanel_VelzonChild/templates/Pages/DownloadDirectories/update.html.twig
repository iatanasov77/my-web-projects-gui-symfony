{% extends "@VSApplication/layout.html.twig" %}

{# Import Macros #}
{% from '@SyliusResource/Macros/actions.html.twig' import create %}
{% import "@VSApplication/Macros/form.html.twig" as vs_form %}
{% import "@VSApplication/Macros/alerts.html.twig" as alerts %}

{% if( item.id ) %}
    {% set pageTitle = ( 'vs_application.menu.edit_download_directory' | trans( {},'VSApplicationBundle' ) ) ~ ': ' ~ item.name %}
{% else %}
    {% set pageTitle = 'vs_application.menu.new_download_directory' | trans( {},'VSApplicationBundle' ) %}
{% endif %}

{% block title %}{{ parent() }} :: {{ pageTitle }}{% endblock %}
{% block pageTitle %}
	<h4 class="pageheader-title">
    	<i class="fas fa-download"></i> 
        {{ pageTitle }}
   	</h4>
{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
            <div class="card">
            	<h5 class="card-header">{{ 'vankosoft_org.form.download_directory' | trans( {},'VankoSoftOrg' ) }}</h5>
            	<div class="card-body">

            		{% if useFormMethod is defined %}{% set formMethod = useFormMethod %}{% else %}{% set formMethod = 'PUT' %}{% endif %}
                    {{ form_start(form, { 'attr': {'class': 'form-horizontal '}, 'method': formMethod }) }}
            
                        {% if formErrors is defined %}
                            {{ vs_form.errors( formErrors ) }}     
                        {% endif %}
    					
    					<div class="form-group">
                            {{ form_label(form.currentLocale, null, {
                                'label_attr': {'class': 'form-label'}
                                }) 
                            }}
                            
                            {{ form_widget(form.currentLocale, {'attr': {'class': 'form-select'}}) }}
                        </div>
                        
                        <div class="form-group">
                            {{ form_label(form.parent, null, {
                                'label_attr': {'class': 'form-label'}
                                }) 
                            }}
                            
                            {% if( item.parent ) %}
                                {% set parentDirectory = item.parent.id %}
                            {% else %}
                                {% set parentDirectory = 0 %}
                            {% endif %}
                            {{ form_widget(form.parent, {'attr': {'class': 'form-select'}, 'value': parentDirectory }) }}
                        </div>
                        
                        <div class="form-group">
                            {{ form_label(form.name, null, {
                                'label_attr': {'class': 'form-label'}
                                }) 
                            }}
                            
                            {{ form_widget(form.name, {'attr': {'class': 'form-control'}, 'value': item.name}) }}
                        </div>

            			{{ vs_form.buttons( form, metadata is defined ? metadata : null ) }}
                    {{ form_end(form, {'render_rest': false}) }}
                </div>
            </div>
            
            {% if( item.id ) %}
                <div class="card" id="containerDownloadFiles">
                    <div class="card-header">
                        <div class="float-start" style="height:30px; padding-top:10px;">{{ 'vankosoft_org.form.files' | trans( {},'VankoSoftOrg' ) }}</div>
                        <div class="btn-group float-end">
                            <a class="btn btn-primary btnUploadFile" id="btnUploadFile" 
                                title="{{ 'vankosoft_org.form.upload_file' | trans( {},'VankoSoftOrg' ) }}" 
                                href="{{ path( 'vsorg_downloads_file_edit', {'directoryId': item.id, 'fileId': 0} ) }}"
                            >
                                {{ 'vankosoft_org.form.upload_file' | trans( {},'VankoSoftOrg' ) }}
                            </a>&nbsp;
                        </div>
                    </div>
                    <div class="card-body">
                        <table class="table table-striped table-advance table-hover m-0">
                            <thead class="table-light">
                                <tr>
                                    <th>{{ 'vankosoft_org.form.file_title' | trans( {},'VankoSoftOrg' ) }}</th>
                                    <th>{{ 'vs_cms.template.filemanager_update_files_table_name' | trans( {},'VSCmsBundle' ) }}</th>
                                    <th>{{ 'vs_cms.template.filemanager_update_files_table_mime' | trans( {},'VSCmsBundle' ) }}</th>
                                    <th>{{ 'vs_cms.template.filemanager_update_files_table_size' | trans( {},'VSCmsBundle' ) }}</th>
                                    <th>{{ 'vs_cms.template.filemanager_update_files_table_actions' | trans( {},'VSCmsBundle' ) }}</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for file in item.files %}
                                    <tr>
                                        <td>{{ file.title }}</td>
                                        <td>{{ file.originalName }}</td>
                                        <td>{{ file.type }}</td>
                                        <td>{{ fileManager.fileSize( file ) | readable_filesize }}</td>
                                        <td>
                                            <div class="btn-group">
                                                <a class="btn btn-primary"
                                                    href="{{ path( 'vsorg_downloads_file_download', {'directoryId': item.id, 'fileId': file.id} ) }}"
                                                    title="{{ 'vs_application.template.items_index_row_action_download' | trans( {},'VSApplicationBundle' ) }}"
                                                >
                                                    <i class="fas fa-download"></i>
                                                </a>
                                                <a class="btn btn-primary btnUploadFile"
                                                    href="{{ path( 'vsorg_downloads_file_edit', {'directoryId': item.id, 'fileId': file.id} ) }}"
                                                    title="{{ 'vs_application.template.items_index_row_action_edit' | trans( {},'VSApplicationBundle' ) }}"
                                                >
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                                <a class="btn btn-danger btnDeleteResource" 
                                                    href="{{ path( 'vsorg_downloads_file_delete', {'directoryId': item.id, 'fileId': file.id} ) }}"
                                                    data-csrfToken="{{ csrf_token( file.id ) }}" 
                									data-redirectUrl="{{ path( 'vsorg_download_directories_update', {'id': item.id} ) }}"
                                                    title="{{ 'vs_application.template.items_index_row_action_delete' | trans( {},'VSApplicationBundle' ) }}"
                                                >
                                                    <i class="icon_close_alt2"></i>
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                {% else %}
                                    <tr>
                                        <td colspan="5">
                                            {{ alerts.info( 'vs_application.template.there_are_no_items_to_display' | trans( {},'VSApplicationBundle' ) ) }}
                                        </td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            {% endif %}
            
        </div>
    </div>
    
    {% include '@VSApplication/Partial/resource-delete.html.twig' %}
{% endblock %}

{% block modals %}
    {{ parent() }}
    
    {% if( item.id ) %}
        {% include 'Modals/upload-file.html.twig' %}
    {% endif %}
{% endblock %}

{% block head_styles %}
    {{ parent() }}
    {{ encore_entry_link_tags( 'js/download-directory', null, 'VelzonTheme' ) }}
{% endblock %}

{% block body_scripts %}
    {{ parent() }}
    {{ encore_entry_script_tags( 'js/download-directory', null, 'VelzonTheme' ) }}
{% endblock %}
