{% extends "@VSApplication/layout.html.twig" %}

{# Import Macros #}
{% from '@SyliusResource/Macros/actions.html.twig' import create %}
{% import "@VSApplication/Macros/form.html.twig" as vs_form %}

{% if( item.id ) %}
    {% set pageTitle = ( 'vankosoft_org.template.page_title_blog_snippet_category_update' | trans( {},'VankoSoftOrg' ) ) ~ ': ' ~ item.name %}
{% else %}
    {% set pageTitle = 'vankosoft_org.template.page_title_blog_snippet_category_create' | trans( {},'VankoSoftOrg' ) %}
{% endif %}

{% block title %}{{ parent() }} :: {{ pageTitle }}{% endblock %}
{% block pageTitle %}
	<h4 class="pageheader-title">
    	<i class="fas fa-code"></i> 
        {{ pageTitle }}
   	</h4>
{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
            <div class="card">
                <h5 class="card-header">{{ 'vankosoft_org.template.page_title_blog_snippet_category'  | trans( {},'VankoSoftOrg' ) }}</h5>
                <div class="card-body">
                
                    {{ form_start(form, { 'attr': {'class': 'form-horizontal '} }) }}
            
                        {% if formErrors is defined %}
                            {{ vs_form.errors( formErrors ) }}     
                        {% endif %}
                        
                        <div class="form-group">
                            {{ form_label(form.currentLocale, null, {
                                'label_attr': {'class': 'form-label'}
                                }) 
                            }}
                            
                            {{ form_widget(form.currentLocale, {'attr': {'class': 'form-select'}}) }}
                        </div>
                        
                        {% if item.id %}{% set itemId = item.id %}{% else %}{% set itemId = 0 %}{% endif %}
                        {% if item.parent %}{% set itemParentTaxon = item.parent.taxon.id %}{% else %}{% set itemParentTaxon = null %}{% endif %}
                        {% set comboDataSourceUrl  = url('vs_cms_pages_tree_combo_with_selected', {'pageId': itemId, 'taxonomyId': taxonomyId}) %}
                        {% set comboTreePlaceholder = 'vankosoft_org.form.parent_category_placeholder' | trans( {},'VankoSoftOrg' ) %}
                        {% set comboDataOptions    = "
                        		url:'" ~ comboDataSourceUrl ~ 
                        		"', required:false, prompt:'" ~ comboTreePlaceholder ~ "', value: '" ~ itemParentTaxon ~ "',
                        		onBeforeLoad:function(node){
                        		    //showSpiner
                        		},
                        		onLoadSuccess:function(node){
                        			//hideSpiner
                        		}
                        " %}
                        <div class="form-group">
                            {{ form_label(form.parent, null, {
                                'label_attr': {'class': 'form-label'}
                                })
                            }}
                            {{ form_widget(form.parent, {
                            	'attr': {
                            		'class': 'easyui-combotree',
                            		'data-options': comboDataOptions
                            	}
                            }) }}
                        </div>
                        
                        <div class="form-group">
                            {{ form_label(form.name, null, {
                                'label_attr': {'class': 'form-label'}
                                }) 
                            }}
                            
                            {{ form_widget(form.name, {'attr': {'class': 'form-control'}, 'value': item.name}) }}
                        </div>
                        
                        {{ vs_form.buttons( form, metadata is defined ? metadata : null ) }}
                    {{ form_end(form, {'render_rest': false}) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}


{% block head_styles %}	
	{{ parent() }}
	{{ encore_entry_link_tags( 'js/snippets_categories_edit', null, 'VelzonTheme' ) }}
{% endblock %}

{% block body_scripts %}
    {{ parent() }}
   
	{{ encore_entry_script_tags( 'js/snippets_categories_edit', null, 'VelzonTheme' ) }}
{% endblock %}

