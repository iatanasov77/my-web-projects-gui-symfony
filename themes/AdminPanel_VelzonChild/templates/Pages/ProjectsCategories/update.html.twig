{% extends "@VSApplication/layout.html.twig" %}

{# Import Macros #}
{% from '@SyliusResource/Macros/actions.html.twig' import create %}
{% import "@VSApplication/Macros/form.html.twig" as vs_form %}

{% if( item.id ) %}
    {% set pageTitle = ( 'vs_application.menu.edit_project_category' | trans( {},'VSApplicationBundle' ) ) ~ ': ' ~ item.name %}
{% else %}
    {% set pageTitle = 'vs_application.menu.create_project_category' | trans( {},'VSApplicationBundle' ) %}
{% endif %}

{% block title %}{{ parent() }} :: Edit Project Category{% endblock %}
{% block pageTitle %}
	<h4 class="pageheader-title">
    	<i class="fas fa-project-diagram"></i> 
        {{ pageTitle }}
   	</h4>
{% endblock %}

{% block content %}
    <div class="row">
        <!-- ============================================================== -->
        <!-- basic tabs  -->
        <!-- ============================================================== -->
        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
            <div class="card">
            	<h5 class="card-header">{{ 'vankosoft_org.template.page_title_category_details' | trans( {},'VankoSoftOrg' ) }}</h5>
            	<div class="card-body">

            		{% if useFormMethod is defined %}{% set formMethod = useFormMethod %}{% else %}{% set formMethod = 'PUT' %}{% endif %}
                    {{ form_start(form, { 'method': formMethod }) }}
            
                        {% if formErrors is defined %}
                            {{ vs_form.errors( formErrors ) }}     
                        {% endif %}
    					
    					<div class="form-check form-check-secondary mb-3">
                            <input type="checkbox" id="project_category_form_enabled" name="project_category_form[enabled]" 
                                class="form-check-input"
                                {% if form.vars.value.enabled %}checked="checked"{% endif %}
                            />
                            <label class="form-check-label" for="project_category_form_enabled">
                                {{ 'vankosoft_org.form.published'|trans({}, 'VankoSoftOrg') }}
                            </label>
                        </div>
    
    					<div class="form-group">
                            {{ form_label(form.currentLocale, null, {
                                'label_attr': {'class': 'form-label'}
                                }) 
                            }}
                            
                            {{ form_widget(form.currentLocale, {'attr': {'class': 'form-select'}}) }}
                        </div>
                        	
                        <div class="form-group">
                            {{ form_label(form.name, null, {
                                'label_attr': {'class': 'form-label'}
                                }) 
                            }}
                            
                            {{ form_widget(form.name, {'attr': {'class': 'form-control'}, 'value': item.name}) }}
                        </div>
                        
                        <div class="form-group">
                            {{ form_label(form.description, null, {
                                'label_attr': {'class': 'form-label'}
                                }) 
                            }}
                            
                            {{ form_widget(form.description, {'attr': {'class': 'form-control'}, 'value': item.description}) }}
                        </div>

            			{{ vs_form.buttons( form, metadata is defined ? metadata : null ) }}
                    {{ form_end(form, {'render_rest': false}) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
