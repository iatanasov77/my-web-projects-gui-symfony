{% extends "@VSApplication/layout.html.twig" %}

{# Import Macros #}
{% import "@VSApplication/Macros/alerts.html.twig" as alerts %}
{% from "@VSApplication/Macros/pagination.html.twig" import pagination %}

{# Override Blocs #}
{% block title %}{{ parent() }} :: {{ 'vankosoft_org.template.list_project_issues' | trans( {},'VankoSoftOrg' ) }}{% endblock %}
{% block pageTitle %}<i class="icon_genius"></i> {{ 'vankosoft_org.template.list_project_issues' | trans( {},'VankoSoftOrg' ) }}{% endblock %}
{% block content %}
    <div class="row">
        <div class="col-xl-6 col-lg-12 col-md-12 col-sm-12 col-12 mb-5">
            {{ form_label( filterForm.filterByProject, null, {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget( filterForm.filterByProject, {
                'attr': {
                    'class': 'form-control',
                    'data-value': filterProject
                }
            }) }}
        </div>
    </div>
    <div class="row">
        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
            
            {% if resources|length > 0 %}
                <table class="table table-striped table-advance table-hover vsTableSortable">
                    <thead class="table-light">
                        <tr>
                            <th></th>
                            <th>{{ 'vs_application.template.items_index_row_title' | trans( {},'VSApplicationBundle' ) }}</th>
                            <th>{{ 'vankosoft_org.template.items_index_row_labels' | trans( {},'VankoSoftOrg' ) }}</th>
                            <th>{{ 'vankosoft_org.template.items_index_row_status' | trans( {},'VankoSoftOrg' ) }}</th>
                            <th data-sortable="true" data-field="createdAt">{{ 'vs_application.template.items_index_row_created' | trans( {},'VSApplicationBundle' ) }}</th>
                            <th data-sortable="true" data-field="updatedAt">{{ 'vs_application.template.items_index_row_updated' | trans( {},'VSApplicationBundle' ) }}</th>
                            <th width="150">{{ 'vs_application.template.items_index_row_action' | trans( {},'VSApplicationBundle' ) }}</th>
                        </tr>
                    </thead>
                    <tbody id="projectsContainer">
                        {% for item in resources %}
                            <tr>
                                <td>{{ loop.index }}</td>
                                <td>{{ item.title }}</td>
                                <td>{{ item.labels }}</td>
                                <td>{{ item.status }}</td>
                                <td>{{ item.createdAt | date( 'd.m.Y H:i:s' ) }}</td>
                                <td>{{ item.updatedAt | date( 'd.m.Y H:i:s' ) }}</td>
                                <td>
                                    <div class="btn-group">
                                    	<a class="btn btn-primary"
                                    	   href="{{ path('vsorg_project_issues_update', {'id': item.id}) }}"
                                    	   title="{{ 'vs_application.template.items_index_row_action_edit' | trans( {},'VSApplicationBundle' ) }}"   
                                        >
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a class="btn btn-danger btnDeleteResource"
                                        	href="{{ path('vsorg_project_issues_delete', {'id': item.id}) }}"
                                        	data-csrfToken="{{ csrf_token( item.id ) }}"
                                        	data-redirectUrl="{{ path( 'vsorg_project_issues_index' ) }}"
                                        	title="{{ 'vs_application.template.items_index_row_action_delete' | trans( {},'VSApplicationBundle' ) }}"
                                        >
                                            <i class="icon_close_alt2"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
                
                {% if resources.haveToPaginate() %}
                    {{ pagerfanta( resources, null, { 'proximity': 10 } ) }}
                {% endif %}
            {% else %}
                {{ alerts.info( 'vs_application.template.there_are_no_items_to_display' | trans( {},'VSApplicationBundle' ) ) }}
            {% endif %}
            
        </div>
    </div>
    
    {% include '@VSApplication/Partial/resource-delete.html.twig' %}
{% endblock %}

{% block head_styles %}
    {{ parent() }}
    {{ encore_entry_link_tags( 'js/project-issues', null, 'VelzonTheme' ) }}
{% endblock %}

{% block body_scripts %}
    {{ parent() }}
    
    {{ encore_entry_script_tags( 'js/project-issues', null, 'VelzonTheme' ) }}
{% endblock %}
