<tr>
    <td>{{ h.host }}</td>
    <td>
    	PHP Version: {{ h.PhpVersion }} ( {{ h.PhpStatusLabel }} )
    </td>
    
    <td width="170" style="text-align: right;">
        <a href="javascript:void(0);" 
            class="btn btn-info btn-circle btn-sm " 
            title="Change Version" 
            data-toggle="modal" 
            data-target="#host-change-php-version-modal"
            data-url="{{ path( 'virtual-hosts-set-php-version', {host: h.host}) }}"
        >
            <i class="fab fa-php"></i>
        </a>
        
	    {% if h.PhpStatus == 2 %} {# STATUS_INSTALLED_NOT_STARTED #}
	        <a href="{{ path( 'php-versions-start-fpm', {version: h.PhpVersion}) }}" 
	            class="btn btn-primary" 
	            title="Start PhpFpm" 
	        >
	            <i class="fas fa-edit"></i>
	            Start PhpFpm
	        </a>
	    {% elseif h.PhpVersion != 'default' and h.PhpStatus < 3 %}
	        <a href="{{ path( 'php-versions-restart-fpm', {version: h.PhpVersion}) }}" 
	            class="btn btn-info btn-circle btn-sm " 
	            title="Restart PhpFpm" 
	        >
	        	<i class="fab fa-php"></i>
	            <i class="fa fa-refresh"></i>
	        </a>
	    {% endif %}
    
    	<a href="javascript:void(0);" 
            class="btn btn-info btn-circle btn-sm btnUpdateVirtualHost" 
            title="Edit Host" 
            data-toggle="modal" 
            data-target="#host-create-modal"
            data-url="{{ path( 'virtual-hosts-update', {host: h.host}) }}"
        >
            <i class="fas fa-edit"></i>
        </a>
        
    	<a href="javascript:void(0);" 
            class="btn btn-danger btn-circle btn-sm btnDeleteHost" 
            title="Delete Host" 
            data-url="{{ path( 'virtual-hosts-delete-host', {host: h.host}) }}"
        >
            <i class="fas fa-trash"></i>
        </a>
    </td>
</tr>